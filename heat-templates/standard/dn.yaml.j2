# Definition for the datanode instance type
# Specifies which bootstrap script to run to set up this instance type and which roles
# to apply to this instance type

heat_template_version: 2015-04-30

parameters:
  Flavor:
    description: Flavor of the datanode server
    type: string
    default: ec2.m4.2xlarge
  KeyName:
    description: Name of an existing ssh keypair
    type: string
  pnda_private_network:
    description: Private network for pnda deployment
    type: string
  pnda_private_subnet:
    description: Private network for pnda deployment
    type: string
  Image:
    type: string
  name:
    type: string
  NodeIndex:
    type: number
    default: 0
  pnda_security_group_pnda:
    type: string
  volume_size:
    type: number
    default: 50
  cluster_name:
    type: string
  pnda_flavor:
    type: string
    default: default
  logvolume_size:
    type: number
    default: 120
  signal_transport:
    type: string
    default: TEMP_URL_SIGNAL
  software_config_transport:
    type: string
    default: POLL_TEMP_URL

resources:
  dn_port:
    type: OS::Neutron::Port
    properties:
      network: { get_param: pnda_private_network }
      fixed_ips:
        - subnet_id: { get_param: pnda_private_subnet }
      security_groups: [{ get_param: pnda_security_group_pnda }]

  dn_server:
    type: OS::Nova::Server
    properties:
      name: { get_param: name }
      image: { get_param: Image }
      flavor: { get_param: Flavor }
      key_name: { get_param: KeyName }
      networks:
        - port: { get_resource: dn_port }


  volume:
    type: OS::Cinder::Volume
    properties:
      size: { get_param: volume_size }
      description: Volume for datanode
  volume_attachment:
    type: OS::Cinder::VolumeAttachment
    depends_on: logvolume_attachment
    properties:
      volume_id: { get_resource: volume }
      instance_uuid: { get_resource: dn_server }
  logvolume:
    type: OS::Cinder::Volume
    properties:
      size: { get_param: logvolume_size }
      description: Volume for datanode logs
  logvolume_attachment:
    type: OS::Cinder::VolumeAttachment
    properties:
      volume_id: { get_resource: logvolume }
      instance_uuid: { get_resource: dn_server }


outputs:
  port_resource:
    description: Heat resource handle for the Neutron port
    value:
      { get_resource: dn_port }
  server_resource:
    description: Heat resource handle for the Nova compute server
    value:
      {get_resource: dn_server}
  hosts_entry:
    description: >
      Server's IP address and hostname in the /etc/hosts format
    value:
      str_replace:
        template: |
          PRIMARYIP PRIMARYHOST
        params:
          PRIMARYIP: {get_attr: [dn_server, first_address]}
          PRIMARYHOST: {get_attr: [dn_server, name]}
