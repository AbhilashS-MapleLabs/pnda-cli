# Definition for the bastion instance type
heat_template_version: 2015-04-30

parameters:
  flavor:
    type: string
  imageId:
    type: string
  keyName:
    type: string
  instanceName:
    type: string
  externalPublicNetworkId:
    type: string
  publicNetworkId:
    type: string
  publicSubnetId:
    type: string
  pndaSecurityGroupPnda:
    type: string
  stackName:
    type: string

resources:
  bastionPort:
    type: OS::Neutron::Port
    properties:
      network: { get_param: publicNetworkId }
      fixed_ips:
        - subnet_id: { get_param: publicSubnetId }
      security_groups: [{ get_param: pndaSecurityGroupPnda }]

  floatingIP:
    type: OS::Neutron::FloatingIP
    depends_on: [ bastionPort ]
    properties:
      floating_network_id: { get_param: externalPublicNetworkId }
      port_id: { get_resource: bastionPort}

  bastionServer:
    type: OS::Nova::Server
    depends_on: floatingIP
    properties:
      name: { get_param: instanceName }
      image: { get_param: imageId }
      key_name: { get_param: keyName }
      flavor: { get_param: flavor }
      metadata: {'node_type': 'bastion',
                 'pnda_cluster': {get_param: stackName},
                 'node_idx':'',
                 'Name': {get_param: instanceName}}
      networks:
        - port: { get_resource: bastionPort }
